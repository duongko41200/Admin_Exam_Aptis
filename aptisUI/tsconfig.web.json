{
  "include": [
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/shared/**/*",
    "../server/src/utils/uploadFile"
  ],
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@/*": ["src/*"]
    }
  }
}
